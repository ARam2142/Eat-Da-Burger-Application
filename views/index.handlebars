<!--HEADER-->
<header class="container-fluid bg-warning text-white">
    <div>
        <span>
            <h1 class="text-center">Eat Da Burger</h1>
        </span>
    </div>
</header>
<br>
<div class="container">
    <div class="d-flex justify-content-center">
        <img src="/assets/img/burger.png" height="290" width="250" />
    </div>

    <br>
    <!--works cited: https://stackoverflow.com/questions/58862808/how-to-place-card-columns-in-the-center-of-the-page-when-using-bootstrap-4-3-1 -->
    <div class="card-columns mx-auto d-flex justify-content-center col-12">

        <!--burgers in line-->
        <div class="menu card col-6">
            <div class="card-body">
                <h2 class="text-center">Menu Menu</h2>
                <ul class="burger-list">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <!--burgers to be eaten-->
        <div class="devour card col-6">
            <div class="card-body">
                <h2 class="text-center">Burgers devoured!</h2>
                <ul class="devoured-list">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burgerdevoured-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <br>

    <form class="form-create d-flex justify-content-center">
        <div class="form-row justify-content-center">
            <label class="h3">Add a burger to the menu</label>
            <input type="text" class="form-control" id="request" placeholder="Enter a burger on the menu">
            <button type="submit" class="submit btn btn-primary btn-lg">Submit</button>
        </div>
    </form>

</div>

